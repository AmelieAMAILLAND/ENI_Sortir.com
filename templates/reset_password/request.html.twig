{% extends 'base.html.twig' %}


{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="relative w-full flex items-center justify-center">
        <div class="container mx-auto px-4 py-16 z-10">
            <form method="post" class="bg-white rounded-lg shadow-md p-8 max-w-xl mx-auto border-4 border-[#8800ff]">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="text-red-600 text-center mb-4" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1 class="text-2xl font-bold text-center mb-6">Réinitialisez votre mot de passe</h1>

                {{ form_start(requestForm) }}

                <div class="flex items-center justify-between mb-4">
                    <label for="{{ requestForm.email.vars.id }}" class="w-full md:w-1/3 mb-2 text-center">Adresse email :</label>
                    {{ form_widget(requestForm.email, {'attr': {'class': 'w-full md:w-2/3 border border-gray-300 rounded-md p-2 mb-4 md:mb-0'}}) }}
                </div>

                <div class="text-sm mb-4">
                    Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </div>

                <button class="bg-[#ffe100] text-black font-bold rounded-full py-2 px-4 w-full shadow-md hover:opacity-80" type="submit">
                    Envoyer l'email de réinitialisation
                </button>

                {{ form_end(requestForm) }}
            </form>
        </div>
    </div>
{% endblock %}
