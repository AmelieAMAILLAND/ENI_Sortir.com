{% extends 'base.html.twig' %}

{% block title %}
    {% if app.user and app.user.id == user.id %}
        Mon profil
        {% else %}
        Profil de {{ user.pseudo }}
    {% endif %}

{% endblock %}

{% block body %}
    <div class="relative bg-center bg-cover h-full flex items-center justify-center" style="background-image: url('{{ asset('images/fun-image2.jpg') }}');">
        <div class="container mx-auto flex flex-col items-center justify-center">
            <div class="flex items-center justify-center mb-4">
                <img id="profile-picture-preview" src="{{ asset(user.getProfilePictureOrDefault()) }}"
                     data-default-src="{{ asset('images/profile/ajouter_des_photos.png') }}"
                     alt="Ma photo" class="w-[250px] h-[250px] rounded-full border-4 border-white shadow-md object-cover">
            </div>

            <div class="w-full max-w-[600px] flex flex-col items-center">
                <div class="py-4 w-full flex flex-col justify-center items-center">
                    <h1 class="text-center text-white text-3xl font-semibold mb-4">{{ user.pseudo }}</h1>
                    <!-- Contour en dégradé et fond en blanc -->
                    <div class="bg-white rounded-md p-8 shadow-md w-full text-xl border-4"
                         style="border-image: linear-gradient(to right, #4f46e5, #9d4edd, #ec4899) 1;">
                        <p class="flex justify-between gap-3 mb-4 px-4"><span class="font-semibold">Prénom :</span> {{ user.firstName }}</p>
                        <p class="flex justify-between gap-3 mb-4 px-4"><span class="font-semibold">Nom :</span> {{ user.lastName }}</p>
                        <p class="flex justify-between gap-3 mb-4 px-4"><span class="font-semibold">Téléphone :</span> {{ user.phone }}</p>
                        <p class="flex justify-between gap-3 mb-4 px-4"><span class="font-semibold">Email :</span> {{ user.email }}</p>
                        <p class="flex justify-between gap-3 mb-4 px-4"><span class="font-semibold">Site de rattachement :</span> {{ user.site.name }}</p>
                    </div>

                    {% if app.user and app.user.id == user.id %}
                        <div class="mt-6 inline-flex space-x-4">
                            <a href="{{ path('app_modifierProfile') }}" class="bg-[#ffe100] text-black font-bold py-2 px-4 rounded hover:bg-yellow-600 shadow-md">
                                Modifier mon profil
                            </a>
                            <a href="{{ backLink }}" class="bg-[#bb9df2] text-black font-bold py-2 px-4 rounded hover:bg-violet-600 shadow-md">
                                Retour
                            </a>
                        </div>
                    {% else %}
                        <div class="mt-4">
                            <a href="{{ backLink }}" class="bg-[#bb9df2] text-black font-bold py-2 px-4 rounded hover:bg-violet-600 shadow-md">
                                Retour
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
