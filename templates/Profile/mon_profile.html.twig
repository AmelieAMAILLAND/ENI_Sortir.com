{% extends 'base.html.twig' %}

{% block title %}Mon Profile{% endblock %}

{% block body %}
    <div class="container">

        <div class="col-md-4">
            <img src="{{ asset('images/profile/ajouter_des_photos.PNG') }}" alt="Ma photo" class="img-fluid">
        </div>

        <div class="col-md-8">
            <h1>{{ user.pseudo }}</h1>
            <p><strong>Prénom :</strong> {{ user.firstName }}</p>
            <p><strong>Nom :</strong> {{ user.lastName }}</p>
            <p><strong>Téléphone :</strong> {{ user.phone }}</p>
            <p><strong>Email :</strong> {{ user.email }}</p>
            <p><strong>Site de rattachement :</strong> {{ user.site.name }}</p>
        </div>

    </div>
{% endblock %}
