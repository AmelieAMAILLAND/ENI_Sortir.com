{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <aside id="modal" class="modal-container fixed top-0 left-0 w-screen h-screen bg-gray-500/75 hidden" aria-hidden="true" role="dialog" aria-modal="false" aria-labelledby="title-modal">
        <div class="overlay absolute w-full h-full bg-gray-500/75 close-modal"></div>
        <div class="modal w-11/12 max-w-2xl min-w-80 p-7 bg-white rounded absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
            <button class="close-modal modal-trigger px-2 py-1 rounded text-lg absolute top-2.5 right-2.5 bg-red-600 text-white">X</button>
            <h1 id="title-modal" class="mb-2.5 text-2xl font-medium">Choisissez un lieu pour votre activité</h1>
            <div id="map"></div>
        </div>

    </aside>
    <div class="mt-5 p-4 max-w-screen-md mx-auto border border-slate-100 bg-amber-50 shadow-md rounded-md flex flex-col">
        <h1 class="mb-3 font-semibold text-center">{% if app.current_route=='app_event_new' %}Créer{% else %}Modifier{% endif %} une sortie </h1>

        {{ form_start(form) }}
            <div>
                {{ form_errors(form) }}
            </div>
            <div>
                {{ form_row(form.name) }}
                {{ form_row(form.dateTimeStart) }}
                {{ form_row(form.duration) }}
                {{ form_row(form.registrationDeadline) }}
                {{ form_row(form.maxNbRegistration) }}
                {{ form_row(form.infoEvent) }}
            </div>
            <div class="flex-row">
                {{ form_row(form.place) }}
                <a href="{{ path('app_place_new') }}" class="bg-amber-400 rounded-md py-1 px-2 max-w-fit mx-auto hover:opacity-80 js-place-btn">+</a>
                {% if event.place %}
                    <a href="{{ path('app_place_edit',{ 'id':event.place.id}) }}" class="bg-amber-400 rounded-md py-1 px-2 max-w-fit mx-auto hover:opacity-80 js-place-btn" id="place-edit">&#x270e;</a>
                {% else %}
                    <a href="" class="bg-amber-400 rounded-md py-1 px-2 max-w-fit mx-auto hover:opacity-80" id="place-edit">&#x270e;</a>
                {% endif %}
                <a href="#modal" class="bg-amber-400 rounded-md py-1 px-2 max-w-fit mx-auto modal-btn js-modal hover:opacity-80">Choisir</a>
{#                <button class="bg-amber-400 rounded-md py-1 px-2 max-w-fit mx-auto modal-btn modal-trigger hover:opacity-80">Choisir</button>#}
            </div>
            <div>
                {% if event.state=='created' %}
                    {{ form_row(form.submit) }}
                    {{ form_row(form.publish) }}
                {% endif %}
                {{ form_rest(form) }} {# pour passer le token #}


                <a href="{{ path('app_event_index') }}" class="bg-amber-400 rounded-md py-1 px-2 max-w-fit mx-auto hover:opacity-80" >Annuler</a>
            </div>
        {{ form_end(form) }}
        {% if app.current_route=='app_event_edit' and event.state=='created'%} {{ include('event/_delete_form.html.twig') }} {% endif %}
        {% if app.current_route=='app_event_edit' and event.state=='published'%} {{ include('event/_cancel_form.html.twig') }} {% endif %}

    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('JavaScript/eventEdit.js') }}"></script>
    <script src="{{ asset('JavaScript/eventModal.js') }}"></script>
{% endblock %}