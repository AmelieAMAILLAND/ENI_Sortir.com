<form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?\nCette action est irréversible.');">
    <input type="hidden" name="delete_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="bg-amber-600 rounded-md py-1 px-2 mb-2 max-w-fit mx-auto hover:opacity-80" title="Supprime la sortie">Supprimer</button>
</form>
