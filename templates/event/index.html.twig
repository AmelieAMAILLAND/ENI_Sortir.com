{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1 class="text-center text-3xl font-semibold my-3">Les sorties</h1>

    <table class="table-fixed max-w-[1300px] mx-auto border border-slate-500 rounded-md shadow-md py-3">
        <thead>
            <tr>
                <th class="py-1 px-2 text-xl text-center ">Nom</th>
                <th class="text-xl text-center ">Durée</th>
                <th class="text-xl text-center ">Début</th>
                <th class="text-xl text-center ">Date limite</th>
                <th class="text-xl text-center ">Places</th>
                <th class="text-xl text-center ">Description</th>
                <th class="text-xl text-center ">État</th>
                <th class="text-xl text-center ">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.duration ? event.duration|date('H:i') : '' }}</td>
                <td>{{ event.dateTimeStart ? event.dateTimeStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.registrationDeadline ? event.registrationDeadline|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.maxNbRegistration }}</td>
                <td>{{ event.infoEvent }}</td>
                <td>{{ event.state }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">VOIR</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">MODIFIER</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>

    <div class="container grid-cols-4">

        {% for event in events %}
            <div class="event-card container border border-red-500 h-fit flex flex-col">
                <div class="name-and-date-container flex justify-between">
                    <p>{{ event.name }}</p>
                    <p>{{ event.dateTimeStart ? event.dateTimeStart|date('d-m-Y à H:i:s') : '' }}</p>
                </div>
                <div class="inscr-container flex justify-between">
                    <p>{{ event.registrationDeadline ? event.registrationDeadline|date('d-m-Y H:i:s') : '' }}</p>
                    <p>Inscrit OU Pas</p>
                </div>
                <div class="place-container">
                    <p>{{ event.maxNbRegistration }} places</p>
                </div>
                <div class="desc-container">
                    <p>{{ event.infoEvent }}</p>
                </div>
                <div class="org-container">

                    <p>Organisateur : <a href="" >{{ event.planner.pseudo }}</a></p>
                </div>
                <div class="actions-container">
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">VOIR</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">MODIFIER</a>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}

    </div>
{% endblock %}
